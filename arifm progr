using System;

namespace arifm_progr
{
    class Program
    {
        static void Main(string[] args)
        {
            Console.WriteLine("Введите число");
            int n = Convert.ToInt32(Console.ReadLine());
            int s = 0;
            for (int i = 0; i <= n; i++)
            {
                s = s + i;
            }
            Console.WriteLine(s);
            Console.ReadLine();
        }
    }
}
